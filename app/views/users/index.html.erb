 <div class="container">
  <div class="row">
   <div class="col-md-3">
     <%= render 'books/usersinfo', user: @user, book: @book %>
       </div>
        <div class="col-md-8 offset-md-1">
         <h2>Users</h2>
          <table class="table table-hover table-inverse">
           <thead>
             <tr>
              <th>image</th>
              <th>name</th>
              <th colspan="3"></th>
             </tr>
            </thead>
           <tbody>
             <% @users.each do |abc| %>
             <tr>
               <td><%= image_tag abc.get_profile_image %></td>
              <td><%= abc.name %></td>
              <td><%= link_to"Show", user_path(abc.id) %></td>
             </tr>
             <% end %>

           </tbody>
          </table>
   </div>
  </div>
 </div>