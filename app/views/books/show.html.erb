<body>
  <main>
    <div class="container">
      <div class="row">
        <div class="col-md-3">
          <%= render 'books/usersinfo',user: @user, book: @book_new %>
        </div>
<div class="col-md-8 offset-md-1">
<h2>Book detail</h2>
 <table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th colspan="1"></th>
      <th>Title</th>
      <th>Opinion</th>

    </tr>
  </thead>
  <tbody>
      <tr>
        <td>
          <%= link_to user_path(@book.user.id) do %>
           <%= image_tag @user.get_profile_image %>
           <%= @book.user.name%>
          <% end %>
        </td>
        <td>
         <%= link_to book_path(@book.id) do %>
          <%= @book.title %>
         <% end %>
        </td>
        <td><%= @book.body %></td>
        <td>
          <% if @book.user == current_user %>
           <%=link_to "Edit", edit_book_path, class: "btn btn-sm btn-success" %>
          <% end %>
        </td>
        <td>
           <% if @book.user == current_user %>
            <%=link_to "Destroy", book_path, method: :delete, "data-confirm" => "本当に消しますか？", class: "btn btn-sm btn-danger "%>
           <% end %>
        </td>
        </tr>
  </tbody>
 </table>
 </div>
        </div>
      </div>
    </div>
  </main>
</body>