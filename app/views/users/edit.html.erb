<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
      <% if @user.errors.any? %>
    	 <%= @user.errors.count%> errors prohibited this obj from being saved:
    	 <ul>
    	   <% @user.errors.full_messages.each do |message| %>
    	   <li><%= message %></li>
    	   <% end %>
    	 </ul>
    	  <% end %>

    	  <%= form_with model: @user do |f|  %>
    	   <div class="from-group">
    	     <label for="inputName">Name</label>
    	      <%= f.text_field :name, autofocus: true, id:"inputName"%>
    	     </div>
    	      <div class="from-group">
    	     <label for="inputImage">Image</label>
    	      <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/"%>
    	     </div>
    	      <div class="from-group">
    	     <label for="user_introduction">Introduction</label>
    	      <%= f.text_field :introduction, autofocus: true, id:"user_introduction"%>
    	     </div>
    	     <div class="from-group">
    	       <%= f.submit "Update User", class:"btn btn-secondary"%>
    	       <% end %>
    	     </div>
    </div>
  </div>
</div>
